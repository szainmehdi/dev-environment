# Ghostty Configuration

# Font
font-family = "JetBrains Mono"
font-size = 13

# Theme & Appearance
theme = "Catppuccin Mocha"
background-opacity = 0.95
background-blur-radius = 20
unfocused-split-opacity = 0.9
window-padding-x = 4
window-padding-y = 4

# Shell Integration
shell-integration = detect
shell-integration-features = cursor,sudo,title

# Behavior
copy-on-select = clipboard
window-inherit-working-directory = true
scrollback-limit = 1000000000

# Keybindings: Splits
# Right Option + \ => Split horizontally (pane below)
keybind = opt+backslash=new_split:down
# Right Option + Shift + \ => Split vertically (pane to the right)
keybind = opt+shift+backslash=new_split:right

# Keybindings: Split Navigation (vim-style with Right Option)
keybind = opt+h=goto_split:left
keybind = opt+j=goto_split:bottom
keybind = opt+k=goto_split:top
keybind = opt+l=goto_split:right

# Keybindings: Tabs
keybind = super+t=new_tab
keybind = super+w=close_surface
keybind = super+shift+bracket_right=next_tab
keybind = super+shift+bracket_left=previous_tab

# Keybindings: Global Show/Hide
keybind = global:ctrl+backquote=toggle_visibility

# Keybindings: Quick Terminal (global dropdown)
keybind = global:ctrl+shift+backquote=toggle_quick_terminal
quick-terminal-position = bottom
quick-terminal-animation-duration = 0.15
